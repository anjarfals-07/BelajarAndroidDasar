<?xml version="1.0" encoding="utf-8"?>
<!--
Linear Layot menumpuk dari atas ke bawah
Match parent = Seluruh Layar
Match content : Sesuai dengan contenntnya
layout gravity supaya tombol di tengah secara vertikal
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

 <ImageView
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_gravity="center_horizontal"
     android:src="@drawable/anjar"/>

   <include layout="@layout/say_hello_form"/>

    <TextView
        android:id="@+id/sayHelloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>